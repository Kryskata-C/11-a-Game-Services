@model WebApplication1.Models.ErrorViewModel
@{
    ViewData["Title"] = Model.StatusCode.HasValue ? $"Error {Model.StatusCode.Value}" : "Error";
}

<div class="text-center">
    <h1 class="display-4 text-danger">@ViewData["Title"]</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p class="lead">@Model.Message</p>
    }
    else
    {
        <p class="lead">An error occurred while processing your request.</p>
    }

    @if (!string.IsNullOrEmpty(Model.OriginalPath))
    {
        <p>
            <small>The requested URL was: <code>@Model.OriginalPath</code></small>
        </p>
    }

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
        <p>
            <small>This ID can be used for tracking the error. Please provide it if you contact support.</small>
        </p>
    }

    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Go to Homepage</a>
</div>