@using Microsoft.AspNetCore.Routing
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@functions {
    string IsActive(string controller, string action)
    {
        var routeData = Context.GetRouteData();
        var currentController = routeData.Values["controller"] as string;
        var currentAction = routeData.Values["action"] as string;
        return (controller == currentController && action == currentAction) ? "active-link" : "";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 11-A Gaming</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/loginButton.css" />

    <style>
        body {
            background-color: #0d0d0d;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .top-navbar {
            background-color: #1a1a1a;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 1px 10px rgba(0, 0, 0, 0.6);
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .hamburger-btn {
            font-size: 1.5rem;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-decoration: none;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-funds {
            background-color: #222;
            padding: 6px 14px;
            border-radius: 20px;
            color: #00ffcc;
            font-weight: 600;
            font-size: 16px;
            box-shadow: 0 0 6px rgba(0, 255, 204, 0.3);
        }

        .btn-login, .btn-register {
            padding: 6px 16px;
            border-radius: 6px;
            font-weight: bold;
            text-decoration: none;
        }

        .btn-login {
            background-color: transparent;
            border: 1px solid #ccc;
            color: white;
        }

        .btn-register {
            background-color: #00bcd4;
            color: black;
            border: none;
        }

            .btn-login:hover,
            .btn-register:hover {
                opacity: 0.9;
            }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #181818;
            transform: translateX(0);
            transition: transform 0.3s ease-in-out;
            z-index: 1000;
            position: relative;
        }

            .sidebar.collapsed {
                transform: translateX(-260px);
            }

            .sidebar a {
                text-decoration: none;
                color: white;
                padding: 10px 15px;
                display: block;
                border-radius: 6px;
            }

                .sidebar a:hover {
                    background-color: #2e2e2e;
                }

        .active-link {
            background-color: #00bcd4 !important;
            color: black !important;
            font-weight: bold;
        }

        .dropdown-toggle::after {
            display: inline-block;
            margin-left: 0.4em;
            vertical-align: middle;
        }

        .dropdown-menu {
            background-color: #1f1f1f;
        }

            .dropdown-menu .dropdown-item {
                color: white;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #2c2c2c;
                }
    </style>
</head>
<body>
    <header class="top-navbar">
        <div class="navbar-left">
            <button class="hamburger-btn" id="toggleSidebar" aria-label="Toggle Sidebar">☰</button>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">11-A Gaming</a>
        </div>
        <div class="navbar-right">
            <span class="user-funds">
                $@((HttpContextAccessor.HttpContext?.Session.GetInt32("Funds") ?? 0).ToString("N2"))
            </span>

            @if (HttpContextAccessor.HttpContext?.Session.GetString("Username") == null)
            {
                <a class="btn btn-login" asp-controller="Home" asp-action="Login">Login</a>
                <a class="btn btn-register" asp-controller="Home" asp-action="Register">Register</a>
            }
            else
            {
                <a class="btn btn-login" asp-controller="Home" asp-action="User">
                    @HttpContextAccessor.HttpContext?.Session.GetString("Username")
                </a>
            }
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar p-3">
            <h5 class="text-light mb-4">Menu</h5>
            <ul class="list-unstyled">

                <li class="mb-2">
                    <div class="dropdown">
                        <a class="dropdown-toggle text-white" href="#" id="hireDropdown" role="button" data-bs-toggle="dropdown">
                            Hire (BRAWLSTARS)
                        </a>
                        <ul class="dropdown-menu border-0">
                            <li><a class="dropdown-item @IsActive("Home", "PlayerHire")" asp-controller="Home" asp-action="PlayerHire">Hire a Player</a></li>
                            <li><a class="dropdown-item @IsActive("Home", "TeamHire")" asp-controller="Home" asp-action="TeamHire">Hire a Team</a></li>
                        </ul>
                    </div>
                </li>

                <li class="mb-2"><a class="@IsActive("Home", "Basket")" asp-controller="Home" asp-action="Basket">Your Basket</a></li>
                <li class="mb-2"><a class="@IsActive("Home", "AboutDeveloper")" asp-controller="Home" asp-action="AboutDeveloper">About Developer</a></li>
                <li class="mb-2"><a class="@IsActive("Home", "User")" asp-controller="Home" asp-action="User">User Profile</a></li>
                <li class="mb-2"><a href="#">Tournaments (Coming Soon)</a></li>
                <li class="mb-2"><a href="#">Admin Panel (🔒)</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('collapsed');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
