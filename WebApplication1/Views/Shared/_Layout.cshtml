@using Microsoft.AspNetCore.Routing
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@functions {
    string IsActive(string controller, string action)
    {
        var routeData = Context.GetRouteData();
        var currentController = routeData.Values["controller"] as string;
        var currentAction = routeData.Values["action"] as string;
        return (controller == currentController && action == currentAction) ? "active-link" : "";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 11-A Gaming</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/loginButton.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #000;
            font-family: 'Segoe UI', sans-serif;
            color: #d0ffd6;
            overflow-x: hidden;
        }

        header.top-navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background: #0a0a0a;
            box-shadow: 0 0 20px rgba(0, 255, 144, 0.2);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .navbar-brand {
            color: #00ff91;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }

        .hamburger-btn {
            background: none;
            border: none;
            color: #00ff91;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-funds {
            color: #00ff91;
            font-weight: bold;
            background-color: #111;
            padding: 6px 14px;
            border-radius: 20px;
            box-shadow: 0 0 8px #00ff91;
        }

        .btn-login, .btn-register {
            background-color: transparent;
            border: 2px solid #00ff91;
            color: #00ff91;
            padding: 6px 16px;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn-login:hover, .btn-register:hover {
                background-color: #00ff91;
                color: #000;
                box-shadow: 0 0 10px #00ff91;
            }

        .sidebar {
            background-color: #0f0f0f;
            min-height: 100vh;
            width: 250px;
            padding: 25px;
            box-shadow: inset 0 0 20px #00ff91;
        }

            .sidebar h5 {
                color: #00ff91;
                margin-bottom: 20px;
            }

            .sidebar a {
                display: block;
                padding: 10px 15px;
                color: #00ff91;
                border-radius: 6px;
                text-decoration: none;
                margin-bottom: 10px;
                transition: background 0.3s ease, transform 0.2s ease;
            }

                .sidebar a:hover {
                    background-color: rgba(0, 255, 144, 0.1);
                    transform: translateX(5px);
                }

        .dropdown-toggle::after {
            color: #00ff91;
        }

        .dropdown-menu {
            background-color: #141414;
            border: none;
        }

            .dropdown-menu .dropdown-item {
                color: #00ff91;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #1f1f1f;
                }

        main {
            flex-grow: 1;
            padding: 30px;
            background: #000;
            color: #d0ffd6;
        }

        footer {
            background-color: #0a0a0a;
            color: #00ff91;
            text-align: center;
            padding: 20px;
            box-shadow: 0 -2px 10px rgba(0,255,128,0.1);
            font-size: 0.9em;
        }

    </style>
</head>
<body>
    <header class="top-navbar">
        <div class="navbar-left">
            <button class="hamburger-btn" id="toggleSidebar" aria-label="Toggle Sidebar">☰</button>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">11-A Gaming</a>
        </div>
        <div class="navbar-right">
            <span class="user-funds">
                $@((HttpContextAccessor.HttpContext?.Session.GetInt32("Funds") ?? 0).ToString("N2"))
            </span>
            @if (HttpContextAccessor.HttpContext?.Session.GetString("Username") == null)
            {
                <a class="btn btn-login" asp-controller="Home" asp-action="Login">Login</a>
                <a class="btn btn-register" asp-controller="Home" asp-action="Register">Register</a>
            }
            else
            {
                <a class="btn btn-login" asp-controller="Home" asp-action="User">
                    @HttpContextAccessor.HttpContext?.Session.GetString("Username")
                </a>
            }
        </div>
    </header>

    <div class="d-flex">
        <aside id="sidebar" class="sidebar p-3">
            <h5 class="text-light mb-4">Menu</h5>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <div class="dropdown">
                        <a class="dropdown-toggle text-white" href="#" id="hireDropdown" role="button" data-bs-toggle="dropdown">
                            Hire (BRAWLSTARS)
                        </a>
                        <ul class="dropdown-menu border-0">
                            <li><a class="dropdown-item @IsActive("Players", "PlayerHire")" asp-controller="Players" asp-action="PlayerHire">Hire a Player</a></li>
                            <li><a class="dropdown-item @IsActive("Home", "TeamHire")" asp-controller="Home" asp-action="TeamHire">Hire a Team</a></li>
                        </ul>
                    </div>
                </li>
                <li class="mb-2"><a class="@IsActive("Home", "Basket")" asp-controller="Home" asp-action="Basket">Your Basket</a></li>
                <li class="mb-2"><a class="@IsActive("Home", "AboutDeveloper")" asp-controller="Home" asp-action="AboutDeveloper">About Developer</a></li>
                <li class="mb-2"><a class="@IsActive("Home", "User")" asp-controller="Home" asp-action="User">User Profile</a></li>
                <li class="mb-2"><a href="#">Tournaments (Coming Soon)</a></li>
                <li class="mb-2"><a href="#">Admin Panel (🔒)</a></li>
            </ul>
        </aside>

        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('collapsed');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
