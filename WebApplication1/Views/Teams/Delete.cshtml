@model WebApplication1.Data.Entities.Team
@{
    ViewData["Title"] = "Delete Team";
}

<h1>@ViewData["Title"]: @Model.Name</h1>

<h3 class="text-danger">Are you sure you want to delete this team?</h3>
<div>
    <h4>Team Details</h4>
    <hr />
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PricePerHour)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PricePerHour)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-3">
            Date Created
        </dt>
        <dd class="col-sm-9">
            @Model.DateCreated.ToString("yyyy-MM-dd")
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImageUrl) && Model.ImageUrl != "/images/default-team.png")
        {
            <dt class="col-sm-3">
                Current Image
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="Current Team Image" style="max-width: 150px; max-height: 150px;" class="img-thumbnail mt-2 mb-2" />
            </dd>
        }
        <dt class="col-sm-3">
            Associated Players
        </dt>
        <dd class="col-sm-9">
            @(Model.Players != null ? Model.Players.Count : 0)
            <em>(Players will become unassigned)</em>
        </dd>
        <dt class="col-sm-3">
            Associated Reviews
        </dt>
        <dd class="col-sm-9">
            @(Model.Reviews != null ? Model.Reviews.Count : 0)
            <em>(Team-specific reviews will be deleted)</em>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete Team</button> |
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Cancel & Back to Details</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>