@model WebApplication1.Data.Entities.Team
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = $"Team Details: {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        background-color: #1e1e2e;
        color: #e0e0e0;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        max-width: 960px;
        margin: 40px auto;
    }

    .details-header-image {
        width: 100%;
        max-height: 350px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 25px;
        border: 3px solid #00ff9140;
    }

    .team-name-header {
        color: #00ff91;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .section-title {
        color: #00dd80;
        margin-top: 30px;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 2px solid #00ff9160;
        font-size: 1.75rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .info-block {
        background-color: #2a2a3a;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #00ff9120;
    }

        .info-block dt {
            font-weight: 600;
            color: #00ff91;
            margin-bottom: 5px;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .info-block dd {
            margin-left: 0;
            font-size: 1rem;
            color: #c0c0c0;
        }

    .description-text {
        line-height: 1.7;
        font-size: 1.05rem;
    }

    .player-card {
        background-color: #2a2a3a;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #00ff9120;
    }

        .player-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 255, 144, 0.2);
        }

    .player-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
        border: 3px solid #00ff91;
    }

    .player-name a {
        color: #00ff91;
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }

        .player-name a:hover {
            text-decoration: underline;
            color: #fff;
        }

    .review-item {
        background-color: #2a2a3a;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 12px;
        border-left: 4px solid #00dd80;
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

        .review-header .reviewer-name {
            font-weight: bold;
            color: #fff;
        }

        .review-header .review-date {
            font-size: 0.85rem;
            color: #a0a0a0;
        }

    .review-comment {
        color: #c0c0c0;
        line-height: 1.6;
    }

    .star-rating-display span {
        color: #ffc107;
        font-size: 1.1em;
        margin-right: 1px;
    }

    .star-rating-display .empty-star {
        color: #404552;
    }

    .action-buttons .btn {
        margin-right: 10px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 20px;
    }

    .btn-secondary-custom {
        background-color: #4a4a5a;
        border-color: #4a4a5a;
        color: #e0e0e0;
    }

        .btn-secondary-custom:hover {
            background-color: #5a5a6a;
            border-color: #5a5a6a;
        }
</style>

<div class="details-container">
    <h1 class="team-name-header">@Model.Name</h1>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Team Logo for @Model.Name" class="details-header-image" />
    }
    else
    {
        <img src="/images/default-team.png" alt="Default Team Logo" class="details-header-image" />
    }

    <h2 class="section-title">Team Information</h2>
    <div class="info-grid">
        <div class="info-block">
            <dt>Price Per Hour</dt>
            <dd>$@Model.PricePerHour.ToString("F2")</dd>
        </div>
        <div class="info-block">
            <dt>Date Created</dt>
            <dd>@Model.DateCreated.ToString("D")</dd>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="info-block" style="grid-column: 1 / -1; margin-bottom: 25px;">
            <dt>Description</dt>
            <dd class="description-text">@Html.Raw(Model.Description.Replace("\n", "<br />"))</dd>
        </div>
    }

    <h2 class="section-title">Team Members (@(Model.Players?.Count ?? 0))</h2>
    @if (Model.Players != null && Model.Players.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var player in Model.Players)
            {
                <div class="col">
                    <div class="player-card h-100">
                        <img src="@(string.IsNullOrEmpty(player.ImageUrl) ? "/images/default-player.png" : player.ImageUrl)" alt="Photo of @player.GamerTag" class="player-image" />
                        <h5 class="player-name mt-2">
                            <a asp-controller="Players" asp-action="Details" asp-route-id="@player.Id">@player.GamerTag</a>
                        </h5>
                        @if (player.Rating > 0)
                        {
                            <p class="mb-0"><small>Rating: @player.Rating.ToString("F1")/5</small></p>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No players are currently assigned to this team.</p>
    }

    <h2 class="section-title">Team Reviews (@(Model.Reviews?.Count ?? 0))</h2>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        @foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
        {
            <div class="review-item">
                <div class="review-header">
                    <span class="reviewer-name">@review.ReviewerName</span>
                    <span class="review-date">@review.ReviewDate.ToString("MMM dd,<x_bin_114> 'at' hh:mm tt")</span>
                </div>
                <div class="star-rating-display mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span>@(i <= review.StarRating ? "★" : "☆")</span>
                    }
                </div>
                <p class="review-comment">@Html.Raw(review.CommentText.Replace("\n", "<br />"))</p>
            </div>
        }
    }
    else
    {
        <p>This team has no reviews yet.</p>
    }

    <div class="mt-4 pt-3 action-buttons" style="border-top: 1px solid #00ff9130;">
        @if (User.IsInRole("Admin"))
        {
        }
        <a asp-action="TeamHire" asp-controller="Home" class="btn btn-secondary-custom">Back to Team List</a>
    </div>
</div>