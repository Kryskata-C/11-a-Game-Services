@model WebApplication1.Models.TeamEditViewModel
@{
    ViewData["Title"] = "Edit Team";
}

<h1>Edit Team: @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingImageUrl" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PricePerHour" class="form-label"></label>
                <input asp-for="PricePerHour" class="form-control" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewTeamImageFile" class="form-label"></label>
                <input asp-for="NewTeamImageFile" class="form-control" type="file" />
                <span asp-validation-for="NewTeamImageFile" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                {
                    <div class="mt-2">
                        <p>Current Image:</p>
                        <img src="@Model.ExistingImageUrl" alt="Current Team Image" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                    </div>
                }
            </div>

            <div class="mb-3">
                <label asp-for="SelectedPlayerIds" class="form-label"></label>
                <select asp-for="SelectedPlayerIds" asp-items="Model.AvailablePlayers" class="form-control" multiple="multiple" size="8"></select>
                <span asp-validation-for="SelectedPlayerIds" class="text-danger"></span>
                <small class="form-text text-muted">Hold down CTRL (Windows) or Command (Mac) to select multiple players.</small>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Back to Details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}