@model WebApplication1.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure this path is correct
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="login-container">
    <h1 class="login-header">@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger login-error"></div> @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" /> <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="login-submit">Register</button>
    </form>
    <div class="register-link mt-3">
        <span>Already have an account?</span>
        <a asp-action="Login" asp-controller="Account" class="register-btn">Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}